@model Restaurant

@{ 
    ViewBag.Title = "Create";
}

<div>
    <h1>Create Restaurant</h1>
    <div>
        @*@Html.ValidationSummary()*@
        @using (Html.BeginForm())  //html helper sukurti formai ,ethod post
        {                           //sis { tarsi <form> tag
            <div>
                @Html.LabelFor(m => m.Name)

                @Html.EditorFor(m => m.Name)  @*del kazko pakeite i sita html helper*@
                @Html.ValidationMessageFor(m => m.Name)
                @*@Html.TextBoxFor(m=>m.Name)*@   @*cia tarsi <input /> lamda nurodo kam*@
            </div>
            <div>
                @Html.LabelFor(m => m.Cuisine)
                @Html.DropDownListFor(m => m.Cuisine, Html.GetEnumSelectList(typeof(CuisineType)))
                @Html.ValidationMessageFor(m => m.Cuisine)
            </div>
            <div>
                <input type="submit" value="Save!" />
            </div>

        }                               @*sis { tarsi </form> tag*@
    </div>
</div>